<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smarttourassistants.TourPackage.TourPackageDetailsFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tourPackageImagegHolder"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tourPackageNameHolder"
            android:text="Candidate Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tourPackagePriceholder"
            android:text="Candidate Course"
            android:textSize="25sp"
            android:textColor="#000"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tourPackageDetailsHolder"
            android:text="Candidate Email"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"/>
        </ScrollView>
    </LinearLayout>


</FrameLayout>